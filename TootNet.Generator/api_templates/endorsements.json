[
    {
        "path": "/api/v1/endorsements",
        "method": "GET",
        "description": "View currently featured profiles",
        "return": "Array Account",
        "parameters": [
            {
                "name": "max_id",
                "type": "Integer",
                "required": false
            },
            {
                "name": "since_id",
                "type": "Integer",
                "required": false
            },
            {
                "name": "limit",
                "type": "Integer",
                "required": false
            }
        ]
    },
    {
        "path": "/api/v1/accounts/:id/pin",
        "method": "POST",
        "description": "Feature account on your profile",
        "return": "Relationship",
        "parameters": [
            {
                "name": ":id",
                "type": "String",
                "required": true
            }
        ]
    },
    {
        "path": "/api/v1/accounts/:id/unpin",
        "method": "POST",
        "description": "Unfeature account from profile",
        "return": "Relationship",
        "parameters": [
            {
                "name": ":id",
                "type": "String",
                "required": true
            }
        ]
    }
]
