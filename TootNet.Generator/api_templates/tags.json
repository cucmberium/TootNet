        "return": "Tag",
        "parameters": [
            {
                "name": ":id",
                "type": "String",
                "required": true
            }
        ]
    },
    {
        "path": "/api/v1/tags/:id/unfollow",
        "method": "POST",
        "description": "Unfollow a hashtag",
        "return": "Tag",
        "parameters": [
            {
                "name": ":id",
                "type": "String",
                "required": true
            }
        ]
    }
]
